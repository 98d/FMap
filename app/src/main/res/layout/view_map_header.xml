<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        style="@style/EditTextStyle"
        android:layout_centerVertical="true"
        android:drawableLeft="@drawable/icon_user"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:text="查找地点、公交、地铁"
        android:textColor="#757575"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_qr_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/padding_size"
        android:background="@drawable/icon_qr_scan"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/iv_voice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/padding_size"
        android:background="@drawable/voice_btn_selector"
        app:layout_constraintBottom_toBottomOf="@id/iv_qr_scan"
        app:layout_constraintRight_toLeftOf="@id/iv_qr_scan"
        app:layout_constraintTop_toTopOf="@id/iv_qr_scan" />
</android.support.constraint.ConstraintLayout>