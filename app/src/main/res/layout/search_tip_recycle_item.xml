<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/padding_size"
    android:minHeight="56dp"
    android:paddingRight="@dimen/padding_size"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_loc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/loc_gray_icon" />

    <LinearLayout
        android:layout_toStartOf="@id/iv_route"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/padding_size"
        android:layout_toEndOf="@id/iv_loc"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_search_title"
            style="@style/NormalTextTheme.BaseTextTheme"
            android:textColor="#313131"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_search_loc"
            style="@style/SmallTextTheme.BaseTextTheme"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/padding_small"
            android:layout_height="wrap_content"
            android:textColor="#797979"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_route"
        android:layout_width="wrap_content"
        android:padding="4dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/route_circle_bg"
        android:src="@drawable/poi_indicator_route"
        android:layout_height="wrap_content" />

    <View android:layout_width="match_parent"
        android:layout_toEndOf="@id/iv_loc"
        android:background="@drawable/common_line"
        android:layout_alignParentBottom="true"
        android:layout_height="1dp"/>

</RelativeLayout>