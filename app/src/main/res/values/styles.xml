<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--输入框样式-->
    <style name="EditTextStyle" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:background">@drawable/button_only_one_normal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/input_height</item>
        <item name="android:paddingLeft">@dimen/padding_size</item>
        <item name="android:paddingRight">@dimen/padding_size</item>
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="IconViewStyle">
        <item name="android:layout_width">@dimen/icon_width</item>
        <item name="android:layout_height">@dimen/icon_height</item>
    </style>

</resources>
