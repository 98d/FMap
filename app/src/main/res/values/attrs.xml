<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BaseIconView">
        <!--IconView最外面背景图片，可以是单个图片或者selector-->
        <attr name="biv_background" format="reference|color" />
        <!--IconView最背里面景图片，可以是单个图片或者selector-->
        <attr name="biv_icon" format="reference|color" />
    </declare-styleable>

    <declare-styleable name="TopTitleView">
        <attr name="ttvRightTitleVisiable" format="boolean" />
        <!--drawble-->
        <attr name="ttvRightIcon" format="reference" />
        <attr name="ttvLeftIcon" format="reference" />
    </declare-styleable>

    <!--SettingItemView-->
    <declare-styleable name="SettingItemView">
        <!--内容-->
        <attr name="sivTitle" format="string|reference"/>
        <!--是否显示-->
        <attr name="sivTitleVisiable" format="boolean"/>
        <!--文字大小-->
        <attr name="sivTitleSize" format="dimension|reference"/>
        <!--文字颜色-->
        <attr name="sivTitleColor" format="color|reference"/>
        <!--文字是否加粗-->
        <attr name="sivTitleBlod" format="boolean"/>

        <attr name="sivSubtitle" format="string|reference"/>
        <attr name="sivSubtitleVisiable" format="boolean"/>
        <attr name="sivSubtitleSize" format="dimension|reference"/>
    </declare-styleable>

    <!--VerticalIconTextView-->
    <declare-styleable name="VerticalIconTextView">
        <!--图标-->
        <attr name="vitIcon" format="reference"/>
        <!--下部分文字内容-->
        <attr name="vitTitle" format="string|reference"/>
    </declare-styleable>
</resources>